--- 
interface Props {
  id: string
  name: string
  img: string
  success: boolean
  flightNumber: number
  details: string | null
}

const { success, flightNumber, img, id, name } = Astro.props
const launchStatus = success ? "Success" : "Failure"
---

<a 
  href={`/launch/${id}`}
  class="rounded-lg border shadow-md bg-gray-800 border-gray-700 hover:scale-105 hover:bg-gray-700 hover:border-gray-500 transition flex flex-col"
>
  <picture class="flex justify-center p-4">
    <img class="rounded-lg" src={img} alt={`Patch for launch ${id}`}/>
  </picture>

  <header class="p-4 flex-grow">
    
    <h2 class="my-2 text-2xl font-bold tracking-tight text-white">
      Flight #{flightNumber}
    </h2>
    
    <p class="my-2 font-light text-gray-400">
      {
        name
      }
    </p>

    <span class:list={[
      "justify-center items-center text-xs font-semibold mr-2 px-2.5 py-0.5 rounded",
      {
        "text-green-200 bg-green-900": success,
        "text-red-200 bg-red-900": !success 
      }
    ]} 
    >
      {launchStatus}
    </span>
  </header>
</a>